<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_cartgoodsinputTips"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/common_margin_split"
        android:gravity="bottom"
        android:text="@string/counter_store"
        android:textColor="@android:color/black"
        android:textSize="@dimen/common_subscript_text_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_binler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/btn_cartgoodsminutes"
                style="@style/item_cartgoodsminutesandplus"
                android:gravity="center"
                android:src="@drawable/minus_nomal" />

            <TextView
                android:id="@+id/tv_cartgoodsmpnum"
                style="@style/item_cartgoodsminutesandplus"
                android:layout_width="35dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="@dimen/common_margin_split"
                android:paddingRight="@dimen/common_margin_split"
                android:singleLine="true"
                android:textColor="@android:color/black" />

            <ImageButton
                android:id="@+id/btn_cartgoodsplus"
                style="@style/item_cartgoodsminutesandplus"
                android:gravity="center"
                android:src="@drawable/add" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_cartgoodsprice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:minWidth="100dip"
            android:textColor="@color/app_theme_red"
            android:textSize="@dimen/common_text_size"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>