<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/common_margin" >

        <RelativeLayout
            android:id="@+id/rl_voucher_text"
            style="@style/item_vercher_text"
            android:background="@drawable/bg_common_bgswitch"
            android:paddingLeft="@dimen/common_margin" >

            <TextView
                android:id="@+id/tv_vouchername"
                style="@style/item_vercher_word_up"
                android:text="10元代金券"
                android:textSize="@dimen/vercher_item_texttitle" />

            <TextView
                android:id="@+id/tv_starttimetoendtime"
                style="@style/item_vercher_word_down"
                android:text="10元代金券" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_voucher_img"
            style="@style/item_vercher_img"
            android:background="@color/app_theme_red" >

            <TextView
                android:id="@+id/tv_par_value"
                style="@style/item_vercher_word_up"
                android:layout_centerHorizontal="true"
                android:text="10元代金券"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tv_need_money"
                style="@style/item_vercher_word_down"
                android:layout_centerHorizontal="true"
                android:text="10元代金券"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>