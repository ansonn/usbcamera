<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/common_margin" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_itemcommentusername"
            style="@style/Common_textView_style_size_minute"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/tv_itemcommenttime"
            style="@style/Common_textView_style_size_minute"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_usercomment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin_split"
        android:textColor="@color/black"
        android:textSize="@dimen/common_text_size" />

    <com.market.view.StarsComment
        android:id="@+id/starsc_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin_split" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin_split"
        android:orientation="horizontal" >

        <TextView
            style="@style/Common_textView_style_size_minute"
            android:text="@string/goodsov_size" />

        <TextView
            android:id="@+id/tv_goodscommentsize"
            style="@style/Common_textView_style_size_minute"
            android:layout_marginLeft="@dimen/common_margin_double" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_margin_split"
        android:layout_marginTop="@dimen/common_margin_split"
        android:visibility="gone"
        android:orientation="horizontal" >

        <TextView
            style="@style/Common_textView_style_size_minute"
            android:text="@string/goodsov_purchasedtime" />

        <TextView
            android:id="@+id/tv_goodscommentpurchasedtime"
            style="@style/Common_textView_style_size_minute"
            android:layout_marginLeft="@dimen/common_margin_double" />
    </LinearLayout>

</LinearLayout>