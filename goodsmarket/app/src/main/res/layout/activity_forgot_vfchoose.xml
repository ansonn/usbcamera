<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/common_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/forgot_marginTop"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_identifyMobile"
            style="@style/Forgot_vfItems_ll" >

            <ImageView
                style="@style/Login_authLoginInner_pl"
                android:src="@drawable/mobile" />

            <TextView
                style="@style/Login_authLoginInner_pl"
                android:layout_marginTop="@dimen/common_margin"
                android:text="@string/forgot_vf_mobile"
                android:textSize="@dimen/forgot_text_size" />

            <TextView
                android:id="@+id/tv_identifyMobile"
                style="@style/Login_authLoginInner_pl"
                android:textSize="@dimen/forgot_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_identifyEmail"
            style="@style/Forgot_vfItems_ll" >

            <ImageView
                style="@style/Login_authLoginInner_pl"
                android:src="@drawable/mail" />

            <TextView
                style="@style/Login_authLoginInner_pl"
                android:layout_marginTop="@dimen/common_margin"
                android:text="@string/forgot_vf_email"
                android:textSize="@dimen/forgot_text_size" />

            <TextView
                android:id="@+id/tv_identifyEmail"
                style="@style/Login_authLoginInner_pl"
                android:singleLine="false"
                android:textSize="@dimen/forgot_text_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>