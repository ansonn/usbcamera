<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/common_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/common_margin"
        android:layout_marginTop="@dimen/common_margin"
         android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_commentview"
                style="@style/item_images_left" />

            <TextView
                android:id="@+id/tv_goodstitle"
                style="@style/Common_textview_style_allcommon"
                android:layout_marginLeft="@dimen/common_margin" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin"
            android:orientation="horizontal" >

            <TextView
                style="@style/Common_textView_style"
                android:layout_gravity="bottom"
                android:text="@string/order_goodsscore" />

            <com.market.view.StarsComment
                android:layout_marginLeft="@dimen/common_margin"
                android:id="@+id/stars_goodscomment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </com.market.view.StarsComment>
        </LinearLayout>

        <EditText
            android:id="@+id/edt_goodscommentdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin"
            android:minLines="3" />
    </LinearLayout>

</LinearLayout>