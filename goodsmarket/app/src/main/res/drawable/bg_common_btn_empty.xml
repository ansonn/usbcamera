<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><shape android:shape="rectangle">
            <solid android:color="@android:color/white" />

            <stroke android:width="1dp" android:color="@color/app_theme_red" />

            <padding android:bottom="0.5dp" android:left="0.5dp" android:right="0.5dp" android:top="0.5dp" />

            <corners android:radius="4dip" />
        </shape></item>
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:color="@color/border_bg" />

            <stroke android:width="1dp" android:color="@color/app_theme_red" />

            <padding android:bottom="0.5dp" android:left="0.5dp" android:right="0.5dp" android:top="0.5dp" />

            <corners android:radius="4dip" />
        </shape></item>

</selector>